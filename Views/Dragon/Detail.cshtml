@model midterm_project.Models.Dragon

@{
    ViewData["Title"] = "Dragond Details";
}


<div class="container text-center">
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.ImgUrl" alt="DragonImg" style="width: 500px;" />
        </div>
        <div class="col-md-6">
            <h3>@Model.Name</h3>
            <h4>@Model.Age</h4>
            <p>@Model.Description</p>

        </div>
    </div>
    <a class="btn btn-warning" asp-controller="Dragon" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
    <a class="btn btn-dark" asp-controller="Dragon" asp-action="List">Back</a>
</div>